<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-4 mx-auto">
      <form method="POST" action="/expenses/{{ record._id }}?_method=PUT" id="form">
        <div class="row g-2 mb-3">
          <label for="name" class="col-md-4 col-form-label">
            <strong>*Required</strong>
          </label>
          <div class="col-md-8">
            <h4 class="title text-center">Your expenses</h4>
          </div>
        </div>
        {{!-- Name --}}
        <div class="row g-2 mb-3">
          <label for="name" class="col-md-4 col-form-label">
            Name *:
          </label>
          <div class="col-md-8">
            <input type="text" name="name" class="form-control" id="name" value="{{ record.name }}" placeholder="" required>
            <div class="invalid-feedback"> This field is required.</div>
          </div>
        </div>
        {{!-- Date --}}
        <div class="row g-2 mb-3">
          <label for="date" class="col-md-4 col-form-label">
            Date *:
          </label>
          <div class="col-md-8">
            <input type="date" name="date" class="form-control" id="date" value="{{ record.date }}" required>
            <div class="invalid-feedback"> This field is required.</div>
          </div>
        </div>
        {{!-- Category --}}
        <div class="row g-2 mb-3">
          <label for="category" class="col-md-4 col-form-label">
            Category *:
          </label>
          <div class="col-md-8">
            <select name="category" class="form-control" id="category" required>
              {{#each categoryOptions as |option|}}
              <option value="{{option.name}}" {{#if option.isSelected}}selected{{/if}}>{{option.name}}</option>
              {{/each}}
            </select>
            <div class="invalid-feedback"> This field is required.</div>
          </div>
        </div>
        {{!-- Amount --}}
        <div class="row g-2 mb-3">
          <label for="amount" class="col-md-4 col-form-label">
            Amount *:
          </label>
          <div class="col-md-8">
            <input type="number" name="amount" class="form-control" id="amount" placeholder="" value="{{record.amount}}" required>
            <div class="invalid-feedback"> This field is required.</div>
          </div>
        </div>
        <div class="text-center my-5">
          <button id="submit" class="btn btn-success" type="submit">Submit</button>
        </div>
      </form>
    </div>
  </div>
</div>